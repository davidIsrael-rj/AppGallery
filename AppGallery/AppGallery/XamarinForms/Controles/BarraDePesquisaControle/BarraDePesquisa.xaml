<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             Padding="20"
             x:Class="AppGallery.XamarinForms.Controles.BarraDePesquisaControle.BarraDePesquisa">
    <ContentPage.Content>
        <StackLayout>
            
            <Label Text="Text, TextColor" />
            <SearchBar Text="Pesquisando Carro ..." TextColor="Blue"/>

            <Label Text="Placeholder"/>
            <SearchBar Placeholder="Digite a palavra que deseja pesquisar... " PlaceholderColor=" 	#808080"/>

            <Label Text="FontFamily, FontSize, FontAttributes, CharacterSpacing"/>
            <SearchBar FontFamily="sans-serif-light" FontSize="18" FontAttributes="Italic" CharacterSpacing="2"/>

            <Label Text=" CancelButtonColor"/>
            <SearchBar CancelButtonColor="Blue"/>
            <Label Text= " Eventos: TextChanged"/>
            
            <Label x:Name="lblTextChanged"/>
            <Label x:Name="lblSearchButtonPressed"/>
            
            <SearchBar TextChanged="SearchBar_TextChanged" SearchButtonPressed="SearchBar_SearchButtonPressed"/>

        </StackLayout>
    </ContentPage.Content>
</ContentPage>