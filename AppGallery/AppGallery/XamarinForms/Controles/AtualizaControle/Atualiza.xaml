<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="AppGallery.XamarinForms.Controles.AtualizaControle.Atualiza">
    <ContentPage.Content>
        <RefreshView RefreshColor="Red" IsRefreshing="False" Refreshing="RefreshView_Refreshing">
            <ScrollView>
                <StackLayout>
                    <Label Text="RefreshView" />
                    <Label Text="Propriedades:RefreshColor, IsRefreshing," />
                    <Label Text="Eventos:Refreshing" />
                    <Label Text="Observações: BarraDeRollagem - ScrollView, ListView, ColletionView, CarouselView" />
                    <Label x:Name="lblStatus" Text="Não Atualizado" TextColor="Red" FontSize="22" HorizontalOptions="CenterAndExpand" VerticalOptions="CenterAndExpand"/>
                </StackLayout>
            </ScrollView>
        </RefreshView>
    </ContentPage.Content>
</ContentPage>